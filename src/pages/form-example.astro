---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="フォーム例 - shadcn + Astro">
  <div class="container mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-6">フォーム例</h1>
    <p class="text-muted-foreground mb-10">shadcn UIを使ったフォーム要素の例です。</p>
    
    <div class="max-w-2xl mx-auto">
      <form class="space-y-8">
        <!-- テキスト入力 -->
        <div class="space-y-2">
          <label for="name" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">お名前</label>
          <input
            type="text"
            id="name"
            placeholder="山田 太郎"
            class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
          />
        </div>

        <!-- メール入力 -->
        <div class="space-y-2">
          <label for="email" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">メールアドレス</label>
          <input
            type="email"
            id="email"
            placeholder="your-email@example.com"
            class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
          />
        </div>

        <!-- セレクトボックス -->
        <div class="space-y-2">
          <label for="category" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">カテゴリ</label>
          <select
            id="category"
            class="flex h-10 w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background file:border-0 file:bg-transparent file:text-sm file:font-medium placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
          >
            <option value="" disabled selected>カテゴリを選択</option>
            <option value="tech">テクノロジー</option>
            <option value="design">デザイン</option>
            <option value="business">ビジネス</option>
            <option value="other">その他</option>
          </select>
        </div>

        <!-- チェックボックス -->
        <div class="space-y-2">
          <div class="flex items-center space-x-2">
            <input
              type="checkbox"
              id="terms"
              class="h-4 w-4 rounded border-gray-300 text-primary focus:ring-primary"
            />
            <label for="terms" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">
              利用規約に同意します
            </label>
          </div>
        </div>

        <!-- ラジオボタン -->
        <div class="space-y-3">
          <label class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">連絡方法</label>
          <div class="space-y-2">
            <div class="flex items-center space-x-2">
              <input
                type="radio"
                id="contact-email"
                name="contact"
                value="email"
                class="h-4 w-4 border-gray-300 text-primary focus:ring-primary"
              />
              <label for="contact-email" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">
                メール
              </label>
            </div>
            <div class="flex items-center space-x-2">
              <input
                type="radio"
                id="contact-phone"
                name="contact"
                value="phone"
                class="h-4 w-4 border-gray-300 text-primary focus:ring-primary"
              />
              <label for="contact-phone" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">
                電話
              </label>
            </div>
          </div>
        </div>

        <!-- テキストエリア -->
        <div class="space-y-2">
          <label for="message" class="text-sm font-medium leading-none peer-disabled:cursor-not-allowed peer-disabled:opacity-70">メッセージ</label>
          <textarea
            id="message"
            placeholder="メッセージを入力してください"
            rows="4"
            class="flex min-h-[80px] w-full rounded-md border border-input bg-background px-3 py-2 text-sm ring-offset-background placeholder:text-muted-foreground focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-50"
          ></textarea>
        </div>

        <!-- 送信ボタン -->
        <div>
          <button
            type="submit"
            class="inline-flex items-center justify-center whitespace-nowrap rounded-md bg-primary text-primary-foreground h-10 px-4 py-2 text-sm font-medium transition-colors hover:bg-primary/90 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring"
          >
            送信する
          </button>
        </div>
      </form>
    </div>
  </div>
</BaseLayout> 