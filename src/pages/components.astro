---
import BaseLayout from '../layouts/BaseLayout.astro';
import ButtonDemo from '../components/examples/ButtonDemo';
---

<BaseLayout title="コンポーネント例 - shadcn + Astro">
  <div class="container mx-auto px-4 py-10">
    <h1 class="text-3xl font-bold mb-10">コンポーネント例</h1>
    
    <div class="grid gap-10">
      <section>
        <h2 class="text-2xl font-bold mb-5">ボタン</h2>
        <div class="p-6 border rounded-lg bg-card">
          <ButtonDemo client:visible />
        </div>
      </section>
    </div>
  </div>
</BaseLayout> 